.round-button {
  width:5em;
  margin auto
  margin-top -3em
}
.round-button-circle {
  width: 100%;
  height:0;
  padding-bottom: 100%;
  border-radius: 50%;
  border:10px solid #cfdcec;
  overflow:hidden;
  background: $color-action; 
  box-shadow: 0 0 3px gray;
}
.round-button-circle:hover {
  background: darken($color-action, 10)
}
.round-button .round-button {
  display:block;
  float:left;
  width:100%;
  padding-top:50%;
  padding-bottom:50%;
  line-height:1em;
  margin-top:-0.5em;
  text-align:center;
  color:#FFF;
  font-size 1em
  font-weight:700;
  text-decoration:none;
  border 0
  background transparent
  cursor pointer
}

#contact
    input
        width 44%
        margin 1em
    .msg
        width 90%
        height 12em
        padding .5em
        background #FFF
        margin 1em auto
        textarea
            width 100%
            height 11em
